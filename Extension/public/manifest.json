{
    "manifest_version": 3,
    "name": "SecureScan",
    "version": "1.0",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "scripting",
        "activeTab"
    ]
}